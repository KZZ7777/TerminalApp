<%- include("partials/header") %>

    <h1>Uitgave Bewerken</h1>

    <form action="/users/<%= userId %>/expenses/<%= expense.id %>/update" method="POST">
        <label for="description">Beschrijving:</label>
        <input type="text" name="description" value="<%= expense.description %>" required><br><br>

        <label for="amount">Bedrag:</label>
        <input type="number" step="any" name="amount" value="<%= expense.amount %>" required><br><br>

        <label for="date">Datum (yyyy/mm/dd):</label>
        <input type="text" name="date" value="<%= expense.date %>" required><br><br>

        <label for="currency">Munteenheid:</label>
        <select name="currency" required>
            <option value="EUR" <%=expense.currency==="EUR" ? "selected" : "" %>>EUR</option>
            <option value="USD" <%=expense.currency==="USD" ? "selected" : "" %>>USD</option>
            <option value="GBP" <%=expense.currency==="GBP" ? "selected" : "" %>>GBP</option>
        </select><br><br>

        <label for="category">Categorie:</label>
        <input type="text" name="category" value="<%= expense.category %>" required><br><br>

        <label for="isPaid">Betaald:</label>
        <input type="radio" name="isPaid" value="true" <%=expense.isPaid ? "checked" : "" %>> Ja
        <input type="radio" name="isPaid" value="false" <%=!expense.isPaid ? "checked" : "" %>> Nee<br><br>

        <button type="submit">Opslaan</button>
    </form>

    <a href="/users/<%= userId %>/expenses/showExpenses">Annuleren</a>

    <%- include("partials/footer") %>