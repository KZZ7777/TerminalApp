<%- include("partials/header") %>

    <h1>Inkomsten Toevoegen</h1>

    <form action="/users/<%= user.id %>/incomes/addIncomes" method="POST">
        <label for="description">Omschrijving:</label>
        <input type="text" id="description" name="description" required>

        <label for="amount">Bedrag:</label>
        <input type="number" id="amount" name="amount" step="0.01" required>

        <label for="date">Datum:</label>
        <input type="date" id="date" name="date" required>

        <label for="currency">Valuta:</label>
        <select id="currency" name="currency" required>
            <option value="EUR">EUR</option>
            <option value="USD">USD</option>
            <option value="GBP">GBP</option>
        </select>

        <label for="category">Categorie:</label>
        <input type="text" name="category" required><br><br>

        <label for="tags">Tags (gescheiden door komma's):</label>
        <input type="text" name="tags" required><br><br>

        <button type="submit">Inkomsten toevoegen</button>
    </form>
    <%- include("partials/footer") %>